<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RefreshLayout">
        <attr name="isCanLoadMore" format="boolean" />
        <attr name="isCanRefresh" format="boolean" />

        <attr name="headStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="inContentUp" value="1" />
        </attr>

        <attr name="footerStyle" format="enum">
            <enum name="normal" value="0" />
            <enum name="inContentUp" value="1" />
        </attr>

        <attr name="friction" format="float" />
        <attr name="duration" format="integer" />

        <attr name="smoothLength" format="integer" />
        <attr name="smoothDuration" format="integer" />
        <attr name="backgroundRefresh" format="reference" />
        <attr name="backgroundLoadMore" format="reference" />
        <attr name="isCoo" format="boolean" />

    </declare-styleable>
</resources>