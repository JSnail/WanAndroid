<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.snail.wanandroid">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".base.WanAndroidApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.WanAndroid">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:theme="@style/AppTheme.Transparent" />
        <activity android:name=".ui.credits.RankDetailsActivity" />
        <activity android:name=".ui.credits.RankActivity" />
        <activity android:name=".ui.collect.CollectActivity" />
        <activity android:name=".ui.share.ShareActivity" />
        <activity android:name=".ui.todo.TodoActivity" />
        <activity android:name=".ui.set.SystemSettingActivity" />
        <activity android:name=".ui.WebActivity" />
    </application>

</manifest>