<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WanAndroid" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>

        <!--         Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!--         Customize your theme here. -->

        <item name="android:colorBackground">@color/blue_50</item>
        <item name="colorError">@color/red_400</item>

        <item name="android:navigationBarColor">@color/nav_bar</item>

        <item name="bottomAppBarStyle">
            @style/Widget.MaterialComponents.BottomAppBar.PrimarySurface
        </item>
        <item name="bottomSheetStyle">@style/Widget.MaterialComponents.BottomSheet.Modal</item>
<!--        Primary brand color.-->

    </style>

    <style name="TransparentStatusBar" parent="Theme.WanAndroid">
        <item name="android:statusBarColor">@color/blue_50_alpha_060</item>
    </style>


   <style name="AppTheme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
       <item name="android:windowBackground">#8D000000</item>
       <item name="android:windowIsTranslucent">true</item>
       <item name="android:statusBarColor">@color/blue_50_alpha_060</item>
       <item name="android:navigationBarColor">@color/nav_bar</item>
   </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextInputLayout_Style">
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlActivated">@color/orange_300</item>
        <item name="colorControlNormal">#1d1a1a</item>
    </style>

    <style name="TextLabel">
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorControlActivated">#FFCC00</item>
        <item name="colorControlNormal">#FFFFFF</item>
    </style>

    <style name="LoadingDialogStyle" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="Theme.WanAndroid.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WanAndroid.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WanAndroid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>